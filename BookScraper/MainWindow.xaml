<Window x:Class="BookScraper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookScraper"
        mc:Ignorable="d"
        Title="Book Scraper" Height="200" Width="200" WindowStartupLocation="Manual" Focusable="False">
    <Grid Background="#FFD1D1D1">
        <Grid.RowDefinitions>
            <RowDefinition Height="31"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <WebBrowser x:Name="wbBrowser" HorizontalAlignment="Stretch" Margin="10" Grid.Row="1" VerticalAlignment="Stretch" Source="{x:Null}" LoadCompleted="wbBrowser_LoadCompleted" />
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnStart_Click" />

    </Grid>
</Window>
